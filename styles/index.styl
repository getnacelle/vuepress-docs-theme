@require './palette.styl';
@require './defaultTheme.styl';

body {
  font-family: 'HK Grotesk', sans-serif;
  font-weight: 400;
  font-size: 16px;
  line-height: 22px;
  letter-spacing: 0.44px;
  color: $textColor;
}

a {
  color: $linkColor;
}

p {
  font-size: 16px;
  line-height: 22px;
  letter-spacing: 0.44px; 
}

h1 {
  font-weight: 400;
  font-size: 36px;
  letter-spacing: 1.13px;
  line-height: 40px;
}

h2 {
  font-weight: 400;
  font-size: 26px;
  letter-spacing: 0.88px;
  line-height: 40px;
  padding-bottom: 6px;
}

h3 {
  font-weight: 700;
  font-size: 22px;
  letter-spacing: 0.69px;
  line-height: 40px;
}

table {
  margin-top: 40px
  margin-bottom: 40px;
}

th {
  font-weight: 700;
  font-size: 24px;
  letter-spacing: 0.75px;
  line-height: 40px;
}

td {
  padding: 16px 22px;
}